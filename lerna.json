{
    "packages": [
        "packages/*",
        "tests/*"
    ],
    "version": "0.4.0",
    "command": {
        "bootstrap": {
            "hoist": "**"
        },
        "publish": {
            "allowBranch": "master",
            "conventionalCommits": true,
            "githubRelease": true,
            "private": false,
            "ignoreChanges": [
                "*.md",
                "LICENSE",
                "*.spec.*"
            ]
        }
    }
}
