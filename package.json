{
    "name": "metaf-root",
    "version": "0.0.0",
    "description": "",
    "author": "Ihor Chulinda <ichulinda@gmail.com>",
    "repository": {
        "type": "git",
        "url": "git@github.com:Igmat/metaf.git"
    },
    "license": "MIT",
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "postbootstrap": "node ./scripts/createBinSymlinks.js",
        "postinstall": "npm run bootstrap",
        "build": "lerna exec -- tsc -p .",
        "watch": "lerna exec --parallel -- tsc -p . -w",
        "test": "lerna link && baset",
        "accept": "baset a",
        "doctoc": "doctoc README.md docs/CONTRIBUTING.md",
        "prerelease": "npm run doctoc",
        "release": "lerna publish --yes",
        "precommit": "lint-staged",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "cz": "git-cz"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.0.0",
        "@commitlint/config-conventional": "^7.0.1",
        "@types/cross-spawn": "^6.0.0",
        "@types/node": "^10.7.0",
        "baset": "^0.13.6",
        "baset-reader-ts": "0.13.6",
        "commitizen": "^2.10.1",
        "cross-spawn": "^6.0.5",
        "cz-conventional-changelog": "^2.1.0",
        "doctoc": "^1.3.1",
        "greenkeeper-lockfile": "^1.15.1",
        "husky": "^0.14.3",
        "lerna": "^3.0.4",
        "lint-staged": "^7.2.2",
        "tslint": "^5.11.0",
        "typescript": "^3.0.1"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "baset": {
        "specs": "tests/*.spec.ts",
        "bases": "tests/*.base",
        "plugins": {
            ".spec.ts$": [
                "baset-reader-ts",
                "baset-baseliner-json"
            ]
        }
    },
    "lint-staged": {
        "*.ts": [
            "tslint --fix --force",
            "git add"
        ],
        "*.tsx": [
            "tslint --fix --force",
            "git add"
        ]
    }
}
