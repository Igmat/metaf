{
    "name": "metaf-root",
    "version": "0.0.0-development",
    "private": true,
    "description": "",
    "author": "Ihor Chulinda <ichulinda@gmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/Igmat/metaf.git"
    },
    "license": "MIT",
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "postbootstrap": "node ./scripts/createBinSymlinks.js",
        "postinstall": "npm run bootstrap",
        "build": "lerna exec --scope metaf-* -- tsc -p .",
        "watch": "lerna exec --scope metaf-* --parallel -- tsc -p . -w",
        "test": "lerna link && baset",
        "accept": "baset a",
        "doctoc": "doctoc README.md docs/CONTRIBUTING.md",
        "prerelease": "npm run doctoc",
        "precommit": "lint-staged",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "cz": "git-cz",
        "release": "lerna exec --concurrency 1 -- semantic-release -e semantic-release-monorepo"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.1.2",
        "@commitlint/config-conventional": "^7.1.2",
        "@types/cross-spawn": "^6.0.0",
        "@types/node": "^10.9.4",
        "baset": "^0.13.7",
        "baset-reader-ts": "0.13.7",
        "baset-baseliner-md": "^0.14.0",
        "commitizen": "^2.10.1",
        "cross-spawn": "^6.0.5",
        "cz-conventional-changelog": "^2.1.0",
        "doctoc": "^1.3.1",
        "greenkeeper-lockfile": "^1.15.1",
        "husky": "^0.14.3",
        "lerna": "^3.3.2",
        "lint-staged": "^7.2.2",
        "npm-run-all": "^4.1.3",
        "semantic-release": "^15.9.15",
        "semantic-release-monorepo": "^6.1.1",
        "tslint": "^5.11.0",
        "typescript": "^3.0.3"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "baset": {
        "specs": "tests/*.spec.ts",
        "bases": "tests/*.base",
        "plugins": {
            ".spec.ts$": [
                "baset-reader-ts",
                "baset-baseliner-md"
            ]
        }
    },
    "release": {
        "monorepo": {
            "branch": "master"
        }
    },
    "lint-staged": {
        "*.ts": [
            "tslint --fix --force",
            "git add"
        ],
        "*.tsx": [
            "tslint --fix --force",
            "git add"
        ]
    }
}
